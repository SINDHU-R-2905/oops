1.public class demo2 {
    static class ApplForm {   // make it static so main can use it
        protected String name;
        int rollno;

        public void display() {
            System.out.println(name);
            System.out.println(rollno);
        }

        public void setvalues(String str, int num) {
            name = str;
            rollno = num;
        }

        public String getvalue() {   // method name fixed
            return name;
        }
    }

    public static void main(String[] args) {
        ApplForm sindhu = new ApplForm();
        sindhu.setvalues("sindhu", 71);
        sindhu.display();
        System.out.println(sindhu.name); // value instead of text

        ApplForm viewer = new ApplForm();
        viewer.setvalues("viewer", 78106);
        viewer.display();

        String std2 = viewer.getvalue();
        System.out.println(std2 + " = std2");
    }
}
